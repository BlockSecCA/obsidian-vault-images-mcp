{
  "manifest_version": "0.2",
  "name": "obsidian-vault-images-mcp-v2",
  "version": "2.0.0",
  "description": "MCP server to view Obsidian vault images in Claude with multi-directory support via Roots protocol",
  "author": {
    "name": "Carlos"
  },
  "server": {
    "type": "node",
    "entry_point": "server/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/server/index.js",
        "--roots",
        "${user_config.image_directories}"
      ]
    }
  },
  "user_config": {
    "image_directories": {
      "title": "Image Directories",
      "description": "Directories containing Obsidian vault images that Claude can access",
      "type": "directory",
      "multiple": true,
      "required": true
    }
  },
  "tools": [
    {
      "name": "get_vault_image",
      "description": "Retrieve images from Obsidian vaults"
    },
    {
      "name": "list_allowed_directories",
      "description": "List configured image directories"
    }
  ],
  "license": "MIT"
}
